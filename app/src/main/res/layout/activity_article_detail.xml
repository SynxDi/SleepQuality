<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/GambarDetail"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="center"
            android:src="@drawable/tidur"/>

        <TextView
            android:id="@+id/textTitleDetail"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apa yang terjadi jika kurang tidur?"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textAuthorDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Galuh Yoga Bagaskara"
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_marginBottom="4dp"
            android:textColor="#888888"/>

        <TextView
            android:id="@+id/textDateDetail"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rabu, 15 Januari 2025"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:textColor="#888888"/>

            <TextView
                android:id="@+id/textContentDetail"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kurang tidur dapat berdampak signifikan pada kesehatan fisik seseorang. Ketika tubuh tidak mendapatkan..." />

    </LinearLayout>

</ScrollView>
